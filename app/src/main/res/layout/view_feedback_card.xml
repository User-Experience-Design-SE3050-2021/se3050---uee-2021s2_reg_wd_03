<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_recycle_view"
        android:paddingTop="5dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="145dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="145dp"
            android:layout_marginBottom="5dp"
            android:text="NAME"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feed_show_name"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Feedback"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_show_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_feed"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Comment about the service"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/feed_show_comment"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:tint="@android:color/black"

            />

        <ImageButton
            android:id="@+id/button_dlt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/feed_show_comment"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/button_edit"
            android:background="@drawable/delete_icon"


            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="20sp"

            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>