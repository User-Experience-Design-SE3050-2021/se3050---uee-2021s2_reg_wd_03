<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="#8FDABA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="POST AD"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="649dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/itemImage"
            android:layout_width="162dp"
            android:layout_height="143dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_baseline_add_shopping_cart_24"
            app:civ_border_color="#FF000000">


        </com.mikhaellopez.circularimageview.CircularImageView>

        <View
            android:id="@+id/textView"
            android:layout_width="407dp"
            android:layout_height="391dp"
            android:layout_below="@id/itemImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.153">

        </View>

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="369dp"
            android:layout_height="50dp"
            android:layout_below="@id/itemImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bordertextfields"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/ic_baseline_text_fields_24"
            android:drawablePadding="2dp"
            android:hint="Enter Ad Title"
            android:inputType="textPersonName|textCapWords"
            android:padding="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/etTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bordertextfields"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/ic_baseline_text_fields_24"
            android:drawablePadding="10dp"
            android:hint="Enter Ad Description"
            android:inputType="textPersonName|textCapWords"
            android:padding="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/etDescription"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bordertextfields"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/ic_baseline_menu_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:drawablePadding="10dp"
            android:hint="Select Category"
            android:inputType="textPersonName|textCapWords"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tvCategory"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bordertextfields"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/ic_baseline_credit_card_24"
            android:drawablePadding="10dp"
            android:hint="Enter Item Price"
            android:inputType="numberDecimal"
            android:padding="15dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnPostAd"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPrice"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#397C59"
            android:drawableLeft="@drawable/ic_baseline_add_circle_24"
            android:text="post ad"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPrice"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="#8FDABA"
            android:drawableLeft="@drawable/ic_baseline_refresh_24"
            android:text="reset"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="59dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="129dp"
            android:background="@color/purple_700"
            android:backgroundTint="@android:color/holo_green_light"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24" />



    </RelativeLayout>



